<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.chatterbaby.chatterbaby">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_chatterbaby"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Main Activity -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Questionnaire Activity -->
        <activity
            android:name="org.chatterbaby.chatterbaby.QuestionnaireActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="org.chatterbaby.chatterbaby.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.chatterbaby.chatterbaby.MainActivity" />
        </activity>

    </application>

</manifest>