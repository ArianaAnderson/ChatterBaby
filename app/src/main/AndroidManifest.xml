<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.chatterbaby.chatterbaby">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_chatterbaby"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Main Activity -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Questionnaire Activity -->
        <activity
            android:name=".QuestionnaireActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.chatterbaby.chatterbaby.MainActivity" />
        </activity>

        <!-- WhyCry Activity -->
        <activity
            android:name=".WhyCryActivity"
            android:hardwareAccelerated="false"
            android:label="@string/title_activity_display_message"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.chatterbaby.chatterbaby.MainActivity" />
        </activity>

        <!-- WhyCryVisualization Activity -->
        <activity
            android:name=".WhyCryVisualization"
            android:hardwareAccelerated="false"
            android:label="@string/title_activity_why_cry_visualization"
            android:parentActivityName=".WhyCryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.chatterbaby.chatterbaby.WhyCryActivity" />
        </activity>

        <!-- NoCry Activity -->
        <activity
            android:name=".NoCryActivity"
            android:hardwareAccelerated="false"
            android:label="@string/title_activity_display_message"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.chatterbaby.chatterbaby.MainActivity" />
        </activity>



        <!--
     ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>